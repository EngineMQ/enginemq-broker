{
    "author": "BCsabaEngine",
    "license": "MIT",
    "name": "engine-mq-broker",
    "version": "1.0.1",
    "description": "Engine-MQ Message queue broker server",
    "main": ".dist/src/index.js",
    "engines": {
        "node": ">=16",
        "npm": "~8"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "start": "node build/src/index.js",
        "dev": "node --max-old-space-size=4096 -- node_modules/.bin/nodemon src/index.ts | pino-pretty -S -o '[{module}] {msg}' -t 'HH:MM:ss.l' -i 'hostname,pid,name,module'",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
        "clean": "tsc --build --clean && rm -rf ./build",
        "build": "npm run clean && tsc --build --force",
        "docker:build": "docker build . -t engine-mq-broker"
    },
    "nodemonConfig": {
        "ignore": [
            "replay/*.json"
        ]
    },
    "dependencies": {
        "@sinclair/typebox": "^0.23.4",
        "ajv": "^8.10.0",
        "dotenv": "16.0.0",
        "env-var": "7.1.1",
        "msgpackr": "^1.5.4",
        "pino": "^7.8.0",
        "pretty-ms": "^7.0.1",
        "short-uuid": "^4.2.0",
        "timsort": "^0.3.0"
    },
    "devDependencies": {
        "@types/node": "17.0.21",
        "@types/timsort": "^0.3.0",
        "@typescript-eslint/eslint-plugin": "^5.13.0",
        "@typescript-eslint/parser": "^5.13.0",
        "eslint": "^8.10.0",
        "nodemon": "^2.0.15",
        "pino-pretty": "^7.5.3",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.2"
    }
}