.content-header
    .container-fluid
        .row.mb-2

            .col-sm-6
                h1.m-0
                    = title
                h5.m-0
                    = subtitle
                = url

            if (breadcrumb)
                .col-sm-6
                    ol.breadcrumb.float-sm-right
                        li.breadcrumb-item
                            a(href='/') Dashboard
                        each val, key in breadcrumb
                            li.breadcrumb-item
                                a(href=key)
                                    = val
                        li.breadcrumb-item
                            = title

