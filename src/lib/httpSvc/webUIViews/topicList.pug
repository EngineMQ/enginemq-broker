extends _base
block content
    .row
        .col-12
            .card

                .card-body.table-responsive.p-0
                    table.table.table-hover.text-nowrap
                        thead
                            tr
                                th Name
                                th Messages
                                th Subscribers
                        tbody
                            each topic in topics
                                tr
                                    td
                                        h5 
                                            a(href='/topic/' + topic.topicName)
                                                = topic.topicName
                                    td
                                        a(href='/topic/' + topic.topicName + '/messages')
                                            = topic.count
                                    td
                                        if (topic.subscribers)
                                            each sub in topic.subscribers
                                                a(href='/client/' + sub.uniqueId)
                                                    = sub.clientId
                                                    small
                                                        | 
                                                        | (#
                                                        = sub.uniqueId
                                                        | )
                                                    br
