extends _base
block content
    .row
        .col-12
            .card
                .card-header
                    h3.card-title Clients

                .card-body.table-responsive.p-0
                    table.table.table-hover.text-nowrap
                        thead
                            tr
                                th ID
                                th Subscriptions
                                th Address
                                th Connected
                        tbody
                            each client in clients
                                tr
                                    td
                                        h5 
                                            a(href='/client/' + client.uniqueId)
                                                = client.clientId
                                    td
                                        if (client.subscriptions)
                                            each subscription in client.subscriptions
                                                = subscription
                                                | 
                                                br
                                    td
                                        = client.address
                                    td
                                        = client.stat.ageHuman
                                        | 
                                        i.fa.fa-info-circle(title=client.stat.inBytes + " bytes received in "+client.stat.inPackets+" packets and " + client.stat.outBytes + " bytes sent in "+client.stat.outPackets+" packets")
